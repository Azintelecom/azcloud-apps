#!/usr/bin/env bash

_setup_mariadb_nextcloud()
{
  set_mariadb_password "$AZCLOUD_APPS_NEXTCLOUD_DATABASE_PASSWORD"
  mysql -u root -p"$AZCLOUD_APPS_NEXTCLOUD_DATABASE_PASSWORD" -e "
    CREATE USER '$AZCLOUD_APPS_NEXTCLOUD_DATABASE_USERNAME'@'localhost' IDENTIFIED BY '$AZCLOUDA_APPS_NEXTCLOUD_DATABASE_PASSWORD';
    CREATE DATABASE $AZCLOUD_APPS_NEXTCLOUD_DATABASE_NAME;
    GRANT ALL PRIVILEGES ON $AZCLOUD_APPS_NEXTCLOUD_DATABASE_NAME.* TO '$AZCLOUD_APPS_NEXTCLOUD_DATABASE_USERNAME'@'localhost';
    FLUSH PRIVILEGES;
    QUIT"
}



